cmake_minimum_required(VERSION 3.0)
project(Hunter LANGUAGES NONE)

include(ExternalProject) # ExternalProject_Add

# Scheme for Release builds

list(APPEND CMAKE_MODULE_PATH "@HUNTER_SELF@/cmake/modules")

include(hunter_gate_settings)
include(hunter_status_debug)
include(hunter_test_string_not_empty)

hunter_status_debug("Scheme: url_sha1_release")

# Check preconditions
hunter_test_string_not_empty("@HUNTER_SELF@")
hunter_test_string_not_empty("@HUNTER_PACKAGE_URL@")
hunter_test_string_not_empty("@HUNTER_PACKAGE_SHA1@")
hunter_test_string_not_empty("@HUNTER_PACKAGE_DOWNLOAD_DIR@")
hunter_test_string_not_empty("@HUNTER_PACKAGE_SOURCE_DIR@")
hunter_test_string_not_empty("@HUNTER_INSTALL_PREFIX@")
hunter_test_string_not_empty("${CMAKE_TOOLCHAIN_FILE}")

if("@HUNTER_STATUS_DEBUG@")
  set(verbose_makefile "-DCMAKE_VERBOSE_MAKEFILE=ON")
endif()

hunter_gate_settings(gate_settings)

ExternalProject_Add(
    X
    URL
    @HUNTER_PACKAGE_URL@
    URL_HASH
    SHA1=@HUNTER_PACKAGE_SHA1@
    DOWNLOAD_DIR
    "@HUNTER_PACKAGE_DOWNLOAD_DIR@"
    SOURCE_DIR
    "@HUNTER_PACKAGE_SOURCE_DIR@"
    INSTALL_DIR
    "@HUNTER_INSTALL_PREFIX@"
        # not used, just avoid creating Install/<name>-release empty directory
    CMAKE_ARGS
    "-DCMAKE_BUILD_TYPE=Release"
    "-DCMAKE_INSTALL_PREFIX=@HUNTER_INSTALL_PREFIX@"
    ${verbose_makefile}
    ${gate_settings}
    "-DCMAKE_TOOLCHAIN_FILE=${CMAKE_TOOLCHAIN_FILE}"
    BUILD_COMMAND
        "@CMAKE_COMMAND@" --build .
        --config Release # for Xcode and MSVC
        --target install
    INSTALL_COMMAND
    ""
)
